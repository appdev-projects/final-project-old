<h1>
  Event #<%= @event.id %> details
</h1>

<a href="/events/<%= @event.id %>/edit">
  Edit event
</a>

<hr>

<dl>
  <dt>
    Host:
  </dt>
  <dd>
     <%@host_id=@event.host.id%>
    <a href="/users/@host_id">
    <%=@event.host.username%>
    </a>
  </dd>
  <dt>
    Number of tourist(s)
  </dt>
  <dd>
    <%=@event.signups.count%>
  </dd>
  <dt>
    Usernames of tourist(s):
  </dt>
    <% @event.signups.each do |current_signup|%>
      
    <tr>
      <ol>
        <li>
               
        <a href="/users/<%=current_signup.tourist_id%>">
        <%=User.find(current_signup.tourist_id).username%>
        </a>
        </li>
      </ol>
    </tr>
    <%end%>

  <dt>
    City
  </dt>
  <dd>
    <%= @event.city %>
  </dd>

  <dt>
    Event name
  </dt>
  <dd>
    <%= @event.event_name %>
  </dd>

  <dt>
    Date
  </dt>
  <dd>
    <%= @event.date %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @event.description %>
  </dd>


  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@event.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@event.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_event/<%= @event.id %>">
  Delete event
</a>

<hr>

<a href="/events">
  Go back
</a>
