<!-- Validation failure messages -->
<% if @geography.errors.any? %>
  <% @geography.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="container">
<h1>
  Edit <%= @geography.geography %>
</h1>

<hr>

<form action="/update_geography/<%= @geography.id %>" method="post">
  <!-- Label and input for geography -->
  <div class="form-group">
    <label for="geography">
      Geography
    </label>

    <input type="text" id="geography" name="geography" class="form-control" value="<%= @geography.geography %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update geography
  </button>
</form>

<hr>

<a href="/geographies">
  Go back
</a>
</div>