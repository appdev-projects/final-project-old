<!-- Validation failure messages -->
<% if @location.present? %>
  <% if @location.errors.any? %>
    <% @location.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new location
</h1>

<hr>

<form action="/create_location" method="post">
  <!-- Label and input for city_name -->
  <div class="form-group">
    <label for="city_name">
      City name
    </label>

    <input type="text" id="city_name" name="city_name" class="form-control" value="<%= @location.try(:city_name) %>">
  </div>

  <!-- Label and input for state_name -->
  <div class="form-group">
    <label for="state_name">
      State name
    </label>

    <input type="text" id="state_name" name="state_name" class="form-control" value="<%= @location.try(:state_name) %>">
  </div>

  <!-- Label and input for country_name -->
  <div class="form-group">
    <label for="country_name">
      Country name
    </label>

    <input type="text" id="country_name" name="country_name" class="form-control" value="<%= @location.try(:country_name) %>">
  </div>

  <!-- Label and input for lat -->
  <div class="form-group">
    <label for="lat">
      Lat
    </label>

    <input type="text" id="lat" name="lat" class="form-control" value="<%= @location.try(:lat) %>">
  </div>

  <!-- Label and input for long -->
  <div class="form-group">
    <label for="long">
      Long
    </label>

    <input type="text" id="long" name="long" class="form-control" value="<%= @location.try(:long) %>">
  </div>

  <!-- Label and input for image -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @location.try(:image) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create location
  </button>
</form>

<hr>

<a href="/locations">
  Go back
</a>
