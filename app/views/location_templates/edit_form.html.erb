<!-- Validation failure messages -->
<% if @location.errors.any? %>
  <% @location.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="container">
<h1>
  Edit location #<%= @location.city_name %>
</h1>

<hr>

<form action="/update_location/<%= @location.id %>" method="post">
  <!-- Label and input for city_name -->
  <div class="form-group">
    <label for="city_name">
      City name
    </label>

    <input type="text" id="city_name" name="city_name" class="form-control" value="<%= @location.city_name %>">
  </div>

  <!-- Label and input for state_name -->
  <div class="form-group">
    <label for="state_name">
      State name
    </label>

    <%= select_tag("state_name", options_from_collection_for_select(State.all, :state, :state, @location.try(:state_name)), :class => "form-control") %>
  </div>

  <!-- Label and input for country_name -->
  <div class="form-group">
    <label for="country_name">
      Country name
    </label>

    <input type="text" id="country_name" name="country_name" class="form-control" value="<%= @location.country_name %>" readonly>
  </div>

  <!-- Label and input for lat -->
  <div class="form-group">
    <label for="lat">
      Lat
    </label>

    <input type="text" id="lat" name="lat" class="form-control" value="<%= @location.lat %>">
  </div>

  <!-- Label and input for long -->
  <div class="form-group">
    <label for="long">
      Long
    </label>

    <input type="text" id="long" name="long" class="form-control" value="<%= @location.long %>">
  </div>

  <!-- Label and input for image -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @location.image %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update location
  </button>
</form>

<hr>

<a href="/locations">
  Go back
</a>
</div