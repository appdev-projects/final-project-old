<h1>
  Edit goal #<%= @goal.id %>
</h1>

<hr>

<form action="/update_goal/<%= @goal.id %>" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @goal.user_id %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @goal.description %>">
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @goal.name %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="d_or_s">
    <input id="d_or_s" class="form-check-input" name="d_or_s" type="checkbox" value="1" <%= "checked" if @goal.d_or_s %>>
    <label for="d_or_s" class="form-check-label">
      D or s
    </label>
  </div>

  <div class="form-group">
    <label for="goal_amount">
      Goal amount
    </label>

    <input type="text" id="goal_amount" name="goal_amount" class="form-control" value="<%= @goal.goal_amount %>">
  </div>

  <div class="form-group">
    <label for="current_amount">
      Current amount
    </label>

    <input type="text" id="current_amount" name="current_amount" class="form-control" value="<%= @goal.current_amount %>">
  </div>

  <div class="form-group">
    <label for="deadline">
      Deadline
    </label>

    <input type="text" id="deadline" name="deadline" class="form-control" value="<%= @goal.deadline %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update goal
  </button>
</form>

<hr>

<a href="/goals">
  Go back
</a>
