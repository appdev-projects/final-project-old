<h1>
  Add a new amenity picture
</h1>


<hr>

<form action="/create_amenity_picture" method="post">

  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <input type="text" id="picture" name="picture" class="form-control">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control">
  </div>

  <div class="form-group">
    <label for="building_amenity_id">
      Building amenity
    </label>

    <input type="text" id="building_amenity_id" name="building_amenity_id" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create amenity picture
  </button>
</form>

<hr>

<a href="/amenity_pictures">
  Go back
</a>
