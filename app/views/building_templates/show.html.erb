<div class="container" style="border:1px solid #cecece;">
  <p></p>
  <div class="row mb-3">
    <div class="col-md-12">
      <div class="row mb-3 mt-3">
        <div class="col-md-6">
          <dl>
            <dt>
              Address
            </dt>
            <dd>
              <div>
                <%= render partial: "building_templates/one_photo_map" %>
              </div>
            </dd>
          </dl>
        </div>
        <div class="col-md-6">
          <dl>
            <dt>
              Name
            </dt>
            <dd>
              <%= @building.name %>
            </dd>
            
            <dt>
              Neighborhood
            </dt>
            <dd>
              <%= @building.neighborhood %>
            </dd>
      
            <dt>
              Web Page
            </dt>
            <dd>
              <a target="_blank" href="<%= @building.webpage %>"><%= @building.webpage %></a>
            </dd>
          </dl>
          <dt>Building amenities</dt><p></p>
          <div class="row">
              <div class="container-fluid">
              	<div class="row">
              	  <div class="row">
                    <%@building.building_amenities.each do |building_amenity|%>
                      <%building_amenity.amenity_pictures.each do |amenity_picture|%>
                        <div class="col-lg-4 col-md-4 col-6 thumb">
                          <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title="" data-image="<%=amenity_picture.picture%>" data-target="#image-gallery">
                            <img class="img-thumbnail" src="<%=amenity_picture.picture%>" alt="Another alt text">
                          </a>
                        </div>
                      <%end%>
                    <%end%>
                  </div>
                  
                  <div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="image-gallery-title"></h4>
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <img id="image-gallery-image" class="img-responsive col-md-12" src="">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary float-left" id="show-previous-image"><i class="fa fa-arrow-left"></i>
                                </button>
        
                                <button type="button" id="show-next-image" class="btn btn-secondary float-right"><i class="fa fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                  </div>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
        <h3>Available apartments</h3><p></p>
        <div class="col-md-8 offset-2">
          <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <%@building.apartments.each do |apartment|%>
                <%if apartment==@building.apartments.first%>
                  <div class="carousel-item active">
                    <a href="/apartments/<%=apartment.id%>">
                      <img class="d-block w-100 img-responsive" src="<%=apartment.apartment_photos.first.photo%>" alt="slide <%=apartment.id%>" style="height: 400px; width: 100%; display: block;">
                    </a>
                    <div class="carousel-caption d-none d-md-block">
                      <h5>Monthly rent: <%=number_to_currency(apartment.rent)%></h5>
                      <p><%=apartment.bedrooms%> bedrooms and <%=apartment.bathrooms%> bathrooms</p>
                    </div>
                  </div>
                <%else%>
                  <div class="carousel-item">
                    <a href="/apartments/<%=apartment.id%>">
                      <img class="d-block w-100 img-fluid" src="<%=apartment.apartment_photos.first.photo%>" alt="slide <%=apartment.id%>" style="height: 400px; width: 100%; display: block;">
                    </a>
                    <div class="carousel-caption d-none d-md-block">
                      <h5>Monthly rent: <%=number_to_currency(apartment.rent)%></h5>
                      <p><%=apartment.bedrooms%> bedrooms and <%=apartment.bathrooms%> bathrooms</p>
                    </div>
                  </div>
                <%end%>
              <%end%>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        
