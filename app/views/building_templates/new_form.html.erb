<h1>
  Add a new building
</h1>


<hr>

<form action="/create_building" method="post">

  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control">
  </div>

  <div class="form-group">
    <label for="neighborhood">
      Neighborhood
    </label>

    <input type="text" id="neighborhood" name="neighborhood" class="form-control">
  </div>

  <div class="form-group">
    <label for="address_latitude">
      Address latitude
    </label>

    <input type="text" id="address_latitude" name="address_latitude" class="form-control">
  </div>

  <div class="form-group">
    <label for="address_longitude">
      Address longitude
    </label>

    <input type="text" id="address_longitude" name="address_longitude" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create building
  </button>
</form>

<hr>

<a href="/buildings">
  Go back
</a>
