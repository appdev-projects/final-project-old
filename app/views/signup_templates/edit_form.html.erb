<!-- Validation failure messages -->
<% if @signup.errors.any? %>
  <% @signup.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit signup #<%= @signup.id %>
</h1>

<hr>

<form action="/update_signup/<%= @signup.id %>" method="post">
  <!-- Label and input for event_id -->
  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <input type="text" id="event_id" name="event_id" class="form-control" value="<%= @signup.event_id %>">
  </div>

  <!-- Label and input for tourist_id -->
  <div class="form-group">
    <label for="tourist_id">
      Tourist
    </label>

    <input type="text" id="tourist_id" name="tourist_id" class="form-control" value="<%= @signup.tourist_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update signup
  </button>
</form>

<hr>

<a href="/signups">
  Go back
</a>
