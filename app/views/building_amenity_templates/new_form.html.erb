<h1>
  Add a new building amenity
</h1>


<hr>

<form action="/create_building_amenity" method="post">

  <div class="form-group">
    <label for="building_id">
      Building
    </label>

    <input type="text" id="building_id" name="building_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="amenity_id">
      Amenity
    </label>

    <input type="text" id="amenity_id" name="amenity_id" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create building amenity
  </button>
</form>

<hr>

<a href="/building_amenities">
  Go back
</a>
